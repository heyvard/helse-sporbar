{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Format på meldinger om mottatt eller ikke mottatt inntektsmelding for en gitt vedtaksperiode",
  "description": "Kanskje dette burde være det som står i $title?",
  "required": [
    "status",
    "sykmeldt",
    "arbeidsgiver",
    "vedtaksperiode",
    "id",
    "tidsstempel",
    "versjon"
  ],
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "MANGLER_INNTEKTSMELDING",
        "MANGLER_IKKE_INNTEKTSMELDING",
        "BEHANDLES_UTENFOR_SPLEIS"
      ]
    },
    "sykmeldt": {
      "type": "string",
      "description": "den sykmeldte identifisert med fnr, dnr eller npid"
    },
    "arbeidsgiver": {
      "type": "string",
      "description": "orgnummer, fnr, dnr, npid, eller annen identifikator for den aktøren sykmeldte er sykmeldt fra"
    },
    "vedtaksperiode": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "fom", "tom"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "fom": {
          "type": "string",
          "format": "date"
        },
        "tom": {
          "type": "string",
          "format": "date"
        }
      },
      "description": "Informasjon om vedtaksperioden"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "identifiserer unikt denne status-oppdateringen"
    },
    "tidsstempel": {
      "type": "string",
      "format": "date_time",
      "description": "tidspunktet denne meldingen ble laget"
    },
    "versjon": {
      "type": "string",
      "description": "schema-versjon for denne meldingen",
      "enum": [
        "1.0.0"
      ]
    }
  }
}