{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mangler, eller ikke mangler inntektsmelding",
  "description": "Format på meldinger som indikerer om en vedtaksperiode mangler inntektsmelding, ikke mangler inntektsmelding eller behandles utenfor Spleis",
  "required": [
    "status",
    "sykmeldt",
    "arbeidsgiver",
    "vedtaksperiode",
    "id",
    "tidspunkt",
    "versjon"
  ],
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "MANGLER_INNTEKTSMELDING",
        "HAR_INNTEKTSMELDING",
        "TRENGER_IKKE_INNTEKTSMELDING",
        "BEHANDLES_UTENFOR_SPLEIS"
      ]
    },
    "sykmeldt": {
      "type": "string",
      "description": "den sykmeldte identifisert med fnr, dnr eller npid"
    },
    "arbeidsgiver": {
      "type": "string",
      "description": "orgnummer, fnr, dnr, npid, eller annen identifikator for den aktøren sykmeldte er sykmeldt fra"
    },
    "vedtaksperiode": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "fom", "tom"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "fom": {
          "type": "string",
          "format": "date"
        },
        "tom": {
          "type": "string",
          "format": "date"
        }
      },
      "description": "Informasjon om vedtaksperioden"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "identifiserer unikt denne status-oppdateringen"
    },
    "tidspunkt": {
      "type": "string",
      "format": "date_time",
      "description": "tidspunktet denne meldingen ble laget"
    },
    "versjon": {
      "type": "string",
      "description": "schema-versjon for denne meldingen",
      "enum": [
        "1.0.0"
      ]
    }
  }
}